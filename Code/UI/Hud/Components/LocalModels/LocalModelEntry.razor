@using Sandbox.UI;
@inherits Panel
@namespace Sandbox.UI

<root class="cell" onclick=@Spawn Tooltip=@Model.ResourcePath>
	<Image Texture=@(Texture.Load(FileSystem.Mounted, $"/{Model.ResourcePath}_c.png", false) ?? ThumbnailCache.Get(Model)) />
</root>

@code
{
	public Model Model { get; set; }

	void Spawn()
	{
		if (Input.Down("run"))
		{
			Clipboard.SetText(Model.ResourcePath);
			Log.Info($"Copied to clipboard: {Model.ResourcePath}");
			return;
		}
		ConsoleSystem.Run("spawn", Model.ResourcePath);
	}

	protected override int BuildHash() => System.HashCode.Combine(ThumbnailCache.Get(Model));
}
